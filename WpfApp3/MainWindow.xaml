<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:SumOfNumbers" 
        Title="Sum of Numbers" Height="200" Width="300">
    <Grid>
        <Label Content="Введите числа (разделенные пробелом):" Margin="10"/>
        <TextBox x:Name="InputTextBox" Margin="10,30,10,0" Grid.Column="1" />
        <Button x:Name="CalculateSumButton" Content="Рассчитать" Margin="10,60,10,0" Click="CalculateSum_Click"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10,90,10,0" FontSize="14" FontWeight="Bold" />
    </Grid>
</Window> 
